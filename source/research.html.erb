<h1 class="lowercase pageheader">publications </h1>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% page_articles.each_with_index do |article, i| %>
  <h3 class="lowercase"><%= article.data.title %> <span class="date"><%= article.date.strftime("%Y") %>
  <span class="article-links">
    <% if article.data.local %>
      <span><%= link_to '<i class="fa fa-file-pdf-o"></i>'.html_safe, article.data.local %></span>
    <% end %>
    <% if article.data.official %>
      <span><%= link_to '<i class="fa fa-external-link"></i>'.html_safe, article.data.official %></span>
    <% end %>
  </span>
  </h3>
  <h5>by <%= article.data.authors %>; <%= article.data.venue %></h5>
  <%= article.body %>
  <!-- requires Nokogiri: -->
  <!-- <%= article.summary(1000) %> <%= link_to 'Read moreâ€¦', article %> --> 
  <% article.tags.each_with_index do |tag, j| %>
    <%= link_to tag, tag_path(tag) %> <%= '|' if j < (article.tags.size - 1) %>
  <% end %>
<% end %>

